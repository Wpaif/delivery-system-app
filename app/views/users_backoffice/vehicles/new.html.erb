<% if @vehicle.errors.any? %>
  <div>
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @vehicle.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [:users_backoffice, @vehicle] do |f| %>
  <div>
    <%= f.label :plate %>
    <%= f.text_field :plate %>
  </div>

  <div>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>

  <div>
    <%= f.label :model %>
    <%= f.text_field :model %>
  </div>

  <div>
    <%= f.label :manufacturing_year %>
    <%= f.number_field :manufacturing_year %>
  </div>

  <div>
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>