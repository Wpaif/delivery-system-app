<% if @order.errors.any? %>
  <div>
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [:admins_backoffice, @order], method: :post do |f| %>
  <div>
    <%= f.label :recipient %>
    <%= f.text_field :recipient %>
  </div>

  <div>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :street %>
    <%= f.text_field :street %>
  </div>

  <div>
    <%= f.label :number %>
    <%= f.number_field :number %>
  </div>

  <div>
    <%= f.label :weight %>
    <%= f.number_field :weight %>
  </div>

  <div>
    <%= f.label :distance %>
    <%= f.number_field :distance %>
  </div>

  <div>
    <%= f.label :carrier_id%>
    <%= f.collection_select :carrier_id, @carriers, :id, :brand_name %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>