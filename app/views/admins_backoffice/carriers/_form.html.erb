<% if @carrier.errors.any? %>
  <div>
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @carrier.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [ :admins_backoffice, @carrier ], local: true) do |form| %>  <div>
    <%= form.label :brand_name %>
    <%= form.text_field :brand_name %>
  </div>

  <div>
    <%= form.label :corporate_name %>
    <%= form.text_field :corporate_name %>
  </div>

  <div>
    <%= form.label :email_domain %>
    <%= form.text_field :email_domain %>
  </div>

  <div>
    <%= form.label :registered_number %>
    <%= form.text_field :registered_number %>
  </div>

  <div>
    <%= form.label :billing_address %>
    <%= form.text_field :billing_address %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>